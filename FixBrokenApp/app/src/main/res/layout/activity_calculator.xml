<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sakif.fixbrokenapp.calculator">

    <TableLayout android:id="@+id/tblNumbers"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtResult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TableRow>
            <Button android:id="@+id/btnMC"
                android:text="MC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnMR"
                android:text="MR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnMS"
                android:text="MS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnMadd"
                android:text="M+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnMsub"
                android:text="M-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btnBK"
                android:text="BK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnCE"
                android:text="CE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnC"
                android:text="C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnPLUSNEG"
                android:text="+-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnRoot"
                android:text="Sqr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btnLn"
                android:text="Ln"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnSin"
                android:text="Sin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnCos"
                android:text="Cos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnTan"
                android:text="Tan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnLog"
                android:text="Log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btn7"
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btn8"
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btn9"
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btndiv"
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnPercent"
                android:text="%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btn4"
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btn5"
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btn6"
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnmulti"
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnInverse"
                android:text="1/*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btn1"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />

            <Button android:id="@+id/btn2"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />

            <Button android:id="@+id/btn3"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnsub"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnMod"
                android:text="MOD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btndot"
                android:text="."
                android:layout_span="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btn0"
                android:text="0"
                android:layout_span="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnadd"
                android:text="+"
                android:layout_span="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
            <Button android:id="@+id/btnequal"
                android:text="="
                android:layout_span="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#cccccc"
        android:text=""
        android:gravity="right"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
